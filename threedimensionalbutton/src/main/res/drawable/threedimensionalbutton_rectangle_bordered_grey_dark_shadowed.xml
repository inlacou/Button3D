<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bottom Shadow -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/threedimensionalbutton_button_corner"/>
            <solid android:color="?attr/colorPrimaryDark" />
            <padding
                android:bottom="@dimen/threedimensionalbutton_general_all_half"
                />
        </shape>
    </item>
    <!-- Top color -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/threedimensionalbutton_button_corner"/>
            <solid android:color="?attr/colorPrimary" />
            <padding
                android:top="@dimen/threedimensionalbutton_general_all"
                android:bottom="@dimen/threedimensionalbutton_general_all"
                android:left="@dimen/threedimensionalbutton_general_all_double"
                android:right="@dimen/threedimensionalbutton_general_all_double"
                />
        </shape>
    </item>
</layer-list>